{
    "compilerOptions": {
        "target": "ES2017",
        "module": "ESNext",
        "removeComments": false,
        "preserveConstEnums": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "noImplicitAny": false,
        "allowSyntheticDefaultImports": true,
        "outDir": "lib",
        "noUnusedLocals": true,
        "declaration": true,
        "noUnusedParameters": true,
        "strictNullChecks": false,
        "resolveJsonModule": true,
        "sourceMap": true,
        "baseUrl": ".",
        "rootDir": "./src",
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "test",
        "**/*.test.ts",
        "**/*.spec.ts"
    ],
    "compileOnSave": false
}